metadata_dir = "{{ garage_hq_metadata_dir }}"
data_dir = "{{ garage_hq_data_dir }}"
db_engine = "sqlite"

metadata_auto_snapshot_interval = "6h"

replication_factor = 1

rpc_bind_addr = "[::]:3901"
rpc_public_addr = "127.0.0.1:3901"
rpc_secret = "{{ garage_rpc_secret | default('changeme') }}"

[s3_api]
s3_region = "eu-west-1"
api_bind_addr = "[::]:3900"
root_domain = ".s3.storage.home.arpa"

[s3_web]
bind_addr = "[::]:3902"
root_domain = ".web.storage.home.arpa"
index = "index.html"

[k2v_api]
api_bind_addr = "[::]:3904"

[admin]
api_bind_addr = "[::]:3903"
admin_token = "{{ garage_admin_token | default('changeme') }}"
metrics_token = "{{ garage_metrics_token | default('changeme') }}"
metrics_require_token = true
